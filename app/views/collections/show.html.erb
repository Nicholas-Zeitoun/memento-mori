<div class="content-dashboard row m-0">
  <!-- Left side bar -->
  <div class="left-sidebar col-md-2 d-none d-lg-flex">
    <div class="left-sidebar-container p-3">
      <!-- User details -->
      <div class="user-section">
        <div class="user-l-sidebar-info">
          <h3><%= current_user.username %></h3>
          <img class="user-l-sidebar-info-image m-0">

          </img>
          <h3><%= current_user.dank_rank.total_score %></h3>
          <div class="dank-bar">
            <span class="badge badge-pill badge-primary dank-filler">  </span>
            <!-- <span class="badge badge-pill badge-light dank-full">  </span> -->
          </div>
          <p>89 / 123 unil next rank!</p>
        </div>
      </div>
      <!-- Collections list -->
      <div class="collection-list-section">

      </div>
      <!-- Categories list -->
      <div class="category-list-section">

      </div>
    </div>
  </div>

  <!-- Main Interface -->
  <!-- Categories menu bar -->
  <div class="col-md-10 p-0 d-flex flex-column">
    <div class="row m-0 p-0 d-none d-lg-flex">
      Collection show Main Content Menu
    </div>
    <!-- Main Content Row -->
    <div class="category-content row m-0 p-0">
      <!-- Main Content Col's -->
      <div class="col-sm-12 col-lg-8 m-0">
        <!-- Memes feed -->
        <div class="row memes-feed p-3">
          <div class="col4">
            <%= @collection.memes.first.title %>
          </div>
        </div>
      </div>
      <!-- Right sidebar -->
      <div class="col-sm-0 col-lg-3 d-none d-md-flex flex-column">
        <div class="right-sidebar p-3">
          right side bar
        </div>
      </div>
    </div>
  </div>
</div>

