<div class="collection-form p-5">
  <%= simple_form_for [meme, @collect] do |f| %>
    <p>Add this meme to one of your collections:</p>
    <!-- retrieve user's collections only -->
    <%= f.association :collection, collection: Collection.where(user: current_user) %>

    <p>Or create a new one to add this meme to:</p>
    <%= f.simple_fields_for :collection do |collection| %>
      <%= collection.input :name, label: "New collection", placeholder: 'New collection name...' %>
    <% end %>
    <br>
    <%= f.submit 'submit', class: "btn btn-primary text-white" %>
  <% end %>
</div>
