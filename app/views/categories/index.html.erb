<div class="content-dashboard row m-0">
  <!-- Left side bar -->
  <%= render 'shared/sidebar/left_sidebar' %>

  <!-- Categories section -->
  <div class="col-md-10 p-0 d-flex flex-column">
    <div class="row m-0 p-0 d-none d-lg-flex">
      <div class="col-12 m-0 p-0">
        <div class="categories-carousel p-3">
          <% @categories.each do |category| %>
            <button type="button" class="btn btn-primary btn-sm"><%= category.name %></button>
            <span class="badge badge-secondary"> <%= category.followers.count %> <i class="fas fa-user"></i></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

