<div class="row">
  <!-- Left side bar -->
  <div class="left-sidebar col-md-2 d-none d-lg-flex">
    <div class="left-sidebar-container p-3">
      <!-- User details -->
      <div class="user-section">
        <div class="user-l-sidebar-info">
          <h3><%= current_user.username %></h3>
          <img class="user-l-sidebar-info-image m-0">

          </img>
          <h3><%= current_user.dank_rank.total_score %></h3>
          <div class="dank-bar">
            <span class="badge badge-pill badge-primary dank-filler">  </span>
            <!-- <span class="badge badge-pill badge-light dank-full">  </span> -->
          </div>
          <p>89 / 123 unil next rank!</p>
        </div>
      </div>
      <!-- Collections list -->
      <div class="collection-list-section">

      </div>
      <!-- Categories list -->
      <div class="category-list-section">

      </div>
    </div>
  </div>

  <!-- Main interface -->
  <div class="meme-main-interface row m-0 p-0">
    
    <!-- Title bar -->
    <div class="memes-actions col-sm-12 col-lg-8 m-0">
      <a href="#">Back</a>
      <a href="#">Edit</a>
      <a href="#">Delete</a>  
    </div>
      
    <!-- Meme upload form -->
    <div>
      <h3>Edit meme</h3>
      <%= render 'memes/meme_form' %>
    </div>
    
  
  </div>
</div>
