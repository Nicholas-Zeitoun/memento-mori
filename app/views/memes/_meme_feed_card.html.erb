<div class="meme-feed-card align-self-center">
  <!-- Top link card -->
  <div class="card d-flex border-0 rounded-tops">
    <h5 class="card-title p-3 m-0"> <%= meme.title %> </h5>
    <div class="meme-card-heading">
      <%= link_to '', meme_path(meme), class: "hidden stretched-link" %>
    </div>
  </div>
  <!-- Image -->
  <div data-meme="<%= meme.id %>" class="meme-card-image js-ajax-collect">
    <%= render partial: "/shared/components/meme_feed_card_image", collection: [meme], as: :meme %>
  </div>
  <!-- Hearts -->
  <div data-meme-id="<%= meme.id %>" class="p-3 like-toggle js-like">
    <%= render partial: "/shared/components/like_toggle", collection: [meme], as: :meme %>
  </div>
</div>


