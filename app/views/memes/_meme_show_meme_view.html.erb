<div class="p-4">
  <div class="card m-4 shadow-md">
    <div class="row mt-3">
        <div class= "col-10">
           <h4><%= meme.title %></h4>
        </div>
        <div class= "col-2">
          <i class="fas fa-ellipsis-h"></i>
        </div>
      </div>

    <div class="row mt-3">
      <div class= "col-12">
        <%= image_tag meme.image_url, class: "img-fluid" %>
      </div>
    </div>

    <div class= "row mt-3">
      <div class= "col-12">
        <i class="fas fa-heart"></i>
        <%= meme.likes.count %>
      </div>
    </div>
  </div>
</div>









