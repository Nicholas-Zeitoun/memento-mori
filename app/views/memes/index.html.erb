<div class="content-dashboard row m-0">
  <!-- Left sidebar -->
  <%= render 'shared/sidebar/left_sidebar' %>
  
  <!-- Categories bar -->
  <div class="col-md-10 p-0 d-flex flex-column">
    <div class="row m-0 p-0 d-none d-lg-flex">
      <div class="col-12 m-0 p-0">
        <div class="categories-carousel p-3">
          <% @top_categories.each do |category| %>
            <a href="<%= category_path(category) %>" class="streched-link">
              <button type="button" class="btn btn-primary btn-sm"><%= category.name %>
                <span class="badge badge-secondary"> <%= category.memes.count %> <i class="fas fa-images"></i></span>
              </button>
            </a>
          <% end %>
        </div>
        <div>
          <%= link_to "More categories", categories_path %>
        </div>
      </div>
    </div>
    <!-- Main Interface -->
    <div class="meme-content row m-0 p-0">
      <!-- Memes feed -->
      <div class="memes-feed col-sm-12 col-lg-8 m-0">
        <div class="meme-scroll-window d-flex flex-column">
          <%= render partial: "meme_feed_card", collection: @memes, as: :meme %>
        </div>
      </div>
      <!-- Layout toggle buttons -->
      <div class="col-sm-0 col-lg-1 d-none d-lg-flex">
       <div class="layout-toggle">
         <button type="button" class="btn btn-secondary"><i class="fas fa-bars"></i></button>
         <button type="button" class="btn btn-secondary"><i class="fas fa-th"></i></button>
       </div>
      </div>
      <!-- Right sidebar -->
      <div class="col-sm-0 col-lg-3 d-none d-md-flex flex-column">
        <div class="right-sidebar p-3" style="backgroud-color: blue;">
          <!-- Leaderboard -->
          <div class="leaderboard-section">
            <div class="leaderboard card p-3 border-0 shadow text-center d-flex justify-content-top">
              <h3>Leaderboard</h3>
              <div class="pl-3">
                <% @top_three_users.each do |topuser| %>
                  <div class="user-item d-flex align-items-center">
                    <img class="avatar"/>
                    <%= topuser.username %>
                    &nbsp<span class="badge badge-primary"><i class="fas fa-skull-crossbones"></i> 
                    <%= topuser.dank_rank.total_score %></span>
                    &nbsp<span class="badge badge-secondary"> <%= topuser.followers.count %> <i class="fas fa-user"></i></span>
                  </div>
                <% end %>
                <%= link_to "More users", users_path %>
              </div>
            </div>
          </div>
          <!-- Meme upload section -->
          <div class="creation-section">
            <div class="creation-card p-3">
              <%# <h5>Upload your meme here! <i class="fas fa-file-upload"></i></h5> %>
              <%= link_to "Upload your meme here!", new_meme_path %>
            </div>
            
          </div>
          <!-- Option buttons -->
          <div class="extras-section">
            <i class="fas fa-plus-circle"></i> <i class="fas fa-comments"></i> <i class="fas fa-cog"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

