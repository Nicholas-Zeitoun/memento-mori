<div class="left-sidebar">
  <div class="left-sidebar-container p-3 pb-0">
    <% if current_user.nil? %>
      <%= render 'shared/sidebar/left_sidebar_login' %>
    <% else %>
    <!-- User details -->
    <div class="user-section">
      <div class="user-l-sidebar-info">
        <!-- Presents login form if not logged in -->
          <h4><%= current_user.username %></h4>
          <%= image_tag current_user.avatar, class: "user-l-sidebar-info-image" %>
            <!-- <img class="user-l-sidebar-info-image m-0"> -->

            <h3><%= current_user.get_dank_rank %></h3>
            <div class="dank-bar">
              <div class="dank-filler">
              </div>
            </div>
            <a href="#" class="badge badge-primary mt-2">89 / 123</a>
      </div>
    </div>
    <!-- Collections list -->
    <div class="collection-list-section p-4 pb-0">
      <h6>My Collections</h6>
      <% current_user.collections.each do |collection| %>
        <%= link_to collection.name, user_collection_path(current_user, collection), class: "badge badge-primary nounderline text-white mt-2" %>
      <% end %>
    </div>

    <!-- Categories list -->
    <div class="category-list-section p-4">
      <h6>My Categories</h6>
      <% current_user.categories.each do |category| %>
          <%= link_to category.name, category_path(category), class: "badge badge-primary nounderline text-white mt-2" %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
