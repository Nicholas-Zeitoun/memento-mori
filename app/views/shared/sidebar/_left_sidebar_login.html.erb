<%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="col-12 btn btn-primary form-actions">
    <%= f.button :submit, "Log in", class: "text-white" %>
  </div>
<% end %>
