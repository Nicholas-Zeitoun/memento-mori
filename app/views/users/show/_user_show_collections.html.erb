<div class="row p-4 d-flex justify-content-center">
  <div class="user-collections-section col-12 m-0 p-3 d-flex justify-content-center">
    <div class="collections-window">
      <h4><%= @user.collections.count %> Collection(s)</h4>
      <hr>
      <% @user.collections.each do |collection| %>
        <div class="collection-section">
            <div class="container-fluid d-flex justify-content-between">
              <h5><%= collection.name %></h5>
                <%= link_to 'View collection', user_collection_path(@user, collection), class: "btn btn-primary" %>
            </div>
          <div class="meme-collection-cards">
            <% collection.memes[0,3].each do |collection_meme| %>
              <!-- <div class="meme-collection-card"> -->
                <%#= collection_meme.title %>
              <!-- </div> -->
              <div class="catcol-card border-0 d-flex flex-column justify-content-center align-items-center row">
                <%= render partial: 'memes/meme_flip_card', collection: [collection_meme], as: :meme %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">

        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>

