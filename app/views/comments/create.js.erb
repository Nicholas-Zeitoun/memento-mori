function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById('new_comment');
  newCommentForm.innerHTML = innerHTML;
}

function addComment(commentHTML) {
  console.log("hello from ajax")
  const comments = document.querySelector('.meme-comments');
  comments.insertAdjacentHTML('beforeend', commentHTML);
}

function updateBadge(badgeHTML) {
  console.log("hello from badge update")
  const memeBadge = document.querySelector("[data-meme-badge='<%= params[:meme_id] %>']")
  memeBadge.innerHTML = badgeHTML
}

function ajaxComments() {
  addComment('<%= j render "shared/atoms/comment_strip", comment: @comment %>');
  refreshForm('<%= j render "shared/components/comment_form", meme: Meme.find(params[:meme_id]) %>');
  updateBadge('<%= j render "/shared/components/meme_badge", meme: Meme.find(params[:meme_id]) %>');
}

ajaxComments();


