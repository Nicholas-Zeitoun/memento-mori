<div class="content-dashboard row m-0 p-0 purple-back">
  <!-- Main Window -->
  <div class="col-12 col-lg-12 p-0 d-lg-flex flex-column">
    <div class="left-dashboard">
      <div class="d-flex justify-content-center align-items-center flex-column h-100 p-3">
        <div class="login-logo">
          <%= image_tag asset_path("memento-alt-logo.png"), class: "login-logo-img" %>
        </div>
        <div class="login-section shadow">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: false,
                          input_html: { class: 'memento-input', autocomplete: "email" },
                          placeholder: 'Email' %>
              <%= f.input :password,
                          required: false,
                          label: false,
                          input_html: { class: 'memento-input', autocomplete: "current-password" },
                          placeholder: 'Password' %>
              <%= f.input :remember_me, input_html: { class: 'memento-checkbox' }, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="col-12 btn btn-primary form-actions">
              <%= f.button :submit, "Log in", class: "memento-button text-white" %>
            </div>
          <% end %>
        </div>
        <div class="sign-up-section">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

