<div class="row ">

  <div class="col-md-6 p-5">

    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="col-12 btn btn-primary form-actions">
        <%= f.button :submit, "Log in", class: "text-white" %>
      </div>
    <% end %>

    <!-- REPLACE with CSS?? Space between button and devise Sign up / Forgot Password Links -->
    <br>
    <%= render "devise/shared/links" %>

  </div>

  <div class="col-md-6 grey-obloid p-5">
    <div class="banner-image p-5">

      <!-- REPLACE Image with random Memento meme?? -->
      <%= image_tag asset_path("https://res.cloudinary.com/practicaldev/image/fetch/s--OoBLh7-Q--/c_limit%2Cf_auto%2Cfl_progressive%2Cq_auto%2Cw_880/https://cdn-images-1.medium.com/max/1614/1%2A8BlqJ8lNVZzuRjAg1mZ50w.png"), class: "banner-image" %>
    </div>
  </div>

</div>
