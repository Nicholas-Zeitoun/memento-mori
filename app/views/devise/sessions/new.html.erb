<div class="content-dashboard row m-0 p-0">

  <!-- Middle and Right Sections -->
  <div class="col-md-12 col-lg-12 p-0 d-flex flex-column">

    <!-- Right Dashboard -->
    <div class="right-dashboard row m-0 p-0">
      <!-- Meme window -->
      <div class="col-12 col-md-12 col-lg-6 p-5">

        <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="col-12 btn btn-primary form-actions">
        <%= f.button :submit, "Log in", class: "text-white" %>
      </div>
    <% end %>

    <!-- REPLACE with CSS?? Space between button and devise Sign up / Forgot Password Links -->
    <br>
    <%= render "devise/shared/links" %>

      </div>
      <!-- Right side bar -->
      <div class="col-0 col-md-0 col-lg-6 d-none d-lg-flex flex-column text-center bg-primary p-5">
            <div class="banner-image p-5">

      <!-- REPLACE Image with random Memento meme?? -->
      <%= image_tag asset_path("https://media.giphy.com/media/xTiTnIdG44UV8Lkl4A/giphy.gif"), class: "banner-image" %>
    </div>
      </div>
    </div>
  </div>
</div>

